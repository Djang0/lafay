		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>UtilisateurConnect</from-outcome>
		<to-view-id>/utilisateur/connexion.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>UtilisateurCreate</from-outcome>
		<to-view-id>/utilisateur/creation.xhtml</to-view-id>
		<redirect/>
	</navigation-case>
</navigation-rule>

</faces-config>
