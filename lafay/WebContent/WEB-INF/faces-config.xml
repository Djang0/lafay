<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <render-kit>
    	<renderer>
    		<component-family>org.primefaces.component</component-family>
    		<renderer-type>org.primefaces.component.PickListRenderer</renderer-type>
    		<renderer-class>be.lreenaers.lafay.web.renderers.PickListBugfixRenderer</renderer-class>
    	</renderer>
    </render-kit>
	<application>
     	   <locale-config>
     	        <default-locale>fr</default-locale>
     	   </locale-config>
	   <resource-bundle>
		<base-name>be.lreenaers.lafay.i18n.i18n</base-name>
		<var>i18n</var>
	   </resource-bundle>
	   <message-bundle>
	   	be.lreenaers.lafay.i18n.Messages
	   </message-bundle>
     </application>
<managed-bean>
	<managed-bean-name>enchainableCtrl</managed-bean-name>
	<managed-bean-class>be.lreenaers.lafay.web.control.EnchainableCtrl</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>utilisateurCtrl</managed-bean-name>
	<managed-bean-class>be.lreenaers.lafay.web.control.UtilisateurCtrl</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>

<lifecycle>
	<phase-listener>be.lreenaers.lafay.web.security.AuthorizationListener</phase-listener>
</lifecycle>
<navigation-rule>
	<navigation-case>
		<from-outcome>goUserList</from-outcome>
		<to-view-id>/utilisateur/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>goModGroup</from-outcome>
		<to-view-id>/groupe/modifier.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>goGrpList</from-outcome>
		<to-view-id>/groupe/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>goCreateGroup</from-outcome>
		<to-view-id>/groupe/creation.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>goCreatePerm</from-outcome>
		<to-view-id>/permission/creation.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>goPermList</from-outcome>
		<to-view-id>/permission/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>editUser</from-outcome>
		<to-view-id>/utilisateur/modifier.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>userCreated</from-outcome>
		<to-view-id>/utilisateur/moniteur.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>authorized</from-outcome>
		<to-view-id>/utilisateur/moniteur.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>unauthorized</from-outcome>
		<to-view-id>/utilisateur/interdit.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>rejected</from-outcome>
		<to-view-id>/utilisateur/connexion.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>list</from-outcome>
		<to-view-id>/test/list.xhtml</to-view-id>
		<redirect/>
	</navigation-case>
	<navigation-case>
		<from-outcome>createUser</from-outcome>
		<to-view-id>/utilisateur/creation.xhtml</to-view-id>
		<redirect/>
	</navigation-case>
</navigation-rule>

</faces-config>
