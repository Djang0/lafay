	</navigation-case>
	<navigation-case>
		<from-outcome>EnchainableModify</from-outcome>
		<to-view-id>/exercice/modifier.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>EnchainableList</from-outcome>
