	</navigation-case>
	<navigation-case>
		<from-outcome>GroupeList</from-outcome>
		<to-view-id>/groupe/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>GroupeCreate</from-outcome>
		<to-view-id>/groupe/creation.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>PermissionCreate</from-outcome>
		<to-view-id>/permission/creation.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>PermissionList</from-outcome>
		<to-view-id>/permission/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>UtilisateurModify</from-outcome>
		<to-view-id>/utilisateur/modifier.xhtml</to-view-id>
