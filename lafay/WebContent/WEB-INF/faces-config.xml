<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <render-kit>
    	<renderer>
    		<component-family>org.primefaces.component</component-family>
    		<renderer-type>org.primefaces.component.PickListRenderer</renderer-type>
    		<renderer-class>be.lreenaers.lafay.web.renderers.PickListBugfixRenderer</renderer-class>
    	</renderer>
    </render-kit>
	<application>
     	   <locale-config>
     	        <default-locale>fr</default-locale>
     	   </locale-config>
	   <resource-bundle>
		<base-name>be.lreenaers.lafay.i18n.i18n</base-name>
		<var>i18n</var>
	   </resource-bundle>
	   <message-bundle>
	   	be.lreenaers.lafay.i18n.Messages
	   </message-bundle>
     </application>

<lifecycle>
	<phase-listener>be.lreenaers.lafay.web.security.AuthorizationListener</phase-listener>
</lifecycle>
<navigation-rule>
	<navigation-case>
		<from-outcome>EnchainableCreate</from-outcome>
