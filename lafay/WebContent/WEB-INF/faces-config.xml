	</navigation-case>
	<navigation-case>
		<from-outcome>UtilisateurList</from-outcome>
		<to-view-id>/utilisateur/liste.xhtml</to-view-id>
		<redirect></redirect>
	</navigation-case>
	<navigation-case>
		<from-outcome>GroupeModify</from-outcome>
